# optimized for intel compiler

OPT     = -O3 -xP -ipo
CFLAGS += -DMPI $(OPT) -wd266,1572
FFLAGS += $(OPT)
LFLAGS  = $(OPT) -w
CC	= mpicc
CF	= mpif77

$(PROG): $(COBJECTS) $(FOBJECTS) 
	$(CC) $(LFLAGS) -o $@ $(COBJECTS) $(FOBJECTS) $(LDLIBS)

.c.o:
	$(CC) -c $(CFLAGS) $<

.f.o:
	$(CF) -c $(FFLAGS) $<

%.d: %.c
	$(SHELL) -ec '$(CC) -M $(CFLAGS) $< \
		| sed '\''s/\($*\)\.o[ :]*/\1.o $@ : /g'\'' > $@; \
		[ -s $@ ] || rm -f $@'

include $(CSOURCE:.c=.d)
